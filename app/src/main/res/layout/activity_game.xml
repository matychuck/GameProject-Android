<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/cave">


    <ImageView
        android:id="@+id/enemy1"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/enemy2"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/enemy3"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/enemy4"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/enemy5"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/enemy6"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/worm"/>
    <ImageView
        android:id="@+id/lightbulb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/lightbulb"/>
    <ImageView
        android:id="@+id/slow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/slow"/>

   <ImageView
        android:id="@+id/player"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/mole"/>

   <ImageView
        android:id="@+id/fish_score"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/fish_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/enemy6" />

    <TextView
        android:id="@+id/score"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="14dp"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/fish_score"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarHealth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:layout_marginEnd="4dp"
        android:max="90"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="92dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:max="100"
        android:minWidth="50dp"
        android:minHeight="50dp"
        android:progress="0"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>